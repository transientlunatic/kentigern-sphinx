    font-size: 12px;
}

div.highlight {
  background: none;
}

a.headerlink {
  margin-left: 0.25em;
}

a.footnote-reference {
  vertical-align: super;
  font-size: 75%;
}

table.footnote td.label {
  color: inherit;
  font-size: 100%;
